{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "react boilerplate project",
  "keywords": [
    "react",
    "webpack3"
  ],
  "main": "index.js",
  "engines": {
    "npm": ">=5.0.0",
    "node": ">=8.0.0"
  },
  "scripts": {
    "dev": "better-npm-run dev",
    "lint-js": "npx eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" ."
  },
  "betterScripts": {
    "dev": {
      "command": "babel-node --presets=env,stage-0 --plugins=transform-runtime,add-module-exports ./tools/dev.js",
      "env": {
        "NODE_ENV": "development"
      }
    }
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*",
      "src/*",
      ".git",
      "node_modules/**/node_modules"
    ],
    "exec": "babel-node --presets=env,stage-0 --plugins=transform-runtime,add-module-exports ./server/app.js",
    "delay": "2000",
    "watch": [
      "server"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "jquery": "^1.12.4",
    "koa": "^2.3.0",
    "moment": "^2.18.1",
    "prop-types": "^15.5.8",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.4",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "circular-dependency-plugin": "^4.2.1",
    "css-loader": "^0.28.7",
    "eventsource-polyfill": "^0.9.6",
    "file-loader": "^1.1.5",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "pixrem": "^4.0.1",
    "pleeease-filters": "^4.0.0",
    "postcss-calc": "^6.0.1",
    "postcss-color-function": "^4.0.0",
    "postcss-custom-media": "^6.0.0",
    "postcss-custom-properties": "^6.2.0",
    "postcss-custom-selectors": "^4.0.1",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.8",
    "postcss-media-minmax": "^3.0.0",
    "postcss-nested": "^2.1.2",
    "postcss-nesting": "^4.2.1",
    "postcss-selector-matches": "^3.0.1",
    "postcss-selector-not": "^3.0.1",
    "react-dev-utils": "^4.1.0",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.20.0"
  },
  "author": "Alan Lee",
  "license": "ISC"
}
